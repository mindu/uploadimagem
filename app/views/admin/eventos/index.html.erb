<h1>Listing eventos</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Data</th>
    <th>Descricao</th>
  </tr>

<% for evento in @eventos %>
  <tr>
    <td><%=h evento.titulo %></td>
    <td><%=h evento.data %></td>
    <td><%=h evento.descricao %></td>
    <td><%= link_to 'Show', [:admin, evento] %></td>
    <td><%= link_to 'Edit', edit_admin_evento_path(evento) %></td>
    <td><%= link_to 'Destroy', [:admin, evento], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New evento', new_admin_evento_path %>
