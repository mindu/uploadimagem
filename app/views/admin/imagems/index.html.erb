<h1>Listing imagems</h1>

<table>
  <tr>
    <th>Imagem</th>
    <th colspan="3">Nome</th>
  </tr>

<% for imagem in @imagems %>
  <tr>
		<td><%= link_to image_tag(imagem.avatar.url(:thumb)), [:admin, imagem] %></td>
    <td><%=h imagem.nome %></td>
    <td><%= link_to 'Edit', edit_admin_imagem_path(imagem) %></td>
    <td><%= link_to 'Destroy', [:admin, imagem], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New imagem', new_admin_imagem_path %>
