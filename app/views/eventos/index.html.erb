<h1>Listing eventos</h1>

<table border="0">
  <tr>
    <th>Titulo</th>
    <th>Data</th>
    <th>Descricao</th>
    <th>Opções</th>
  </tr>

<% for evento in @eventos %>
  <tr>
    <td><%=h evento.titulo %></td>
    <td><%=h evento.data %></td>
    <td><%=h evento.descricao %></td>
    <td><%= link_to 'Show', evento %></td>
  </tr>
<% end %>
</table>

